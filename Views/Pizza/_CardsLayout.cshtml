@model List<Pizza>

@{
    if (@Model.Count == 0)
    {
        <div class="container">
            <h1>Non ci sono Pizze</h1>
        </div>
    }
    else
    {
        foreach(var pizza in Model)
        {
            <div class="container">
                <div class="card card-pizza-list mb-3">
                    <div class="row g-0">
                        <div class="col-md-4">
                        <a class="" asp-controller="Pizza" asp-action="Details" asp-route-id="@pizza.Id">
                            <img src=@pizza.Image class="img-fluid rounded-start" alt=@pizza.Name>                    
                        </a>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@pizza.Name</h5>
                                <p class="card-text">@pizza.Description</p>
                                <p class="card-text"><small class="text-muted">@pizza.Price &euro;</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }        
    }
}
